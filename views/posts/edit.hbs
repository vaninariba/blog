<div class="col-md-4 mx-auto">
<div class="card">
    <div class="card-header">
        <h3>Edita tu post</h3>
    </div>
    <div class="car-body">
        <form action="/posts/edit/{{post._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
            <input type="text" name="titulo" value="{{post.titulo}}">
            </div>
            <div class="form-group">
            <input type="text" name="autor" value="{{post.autor}}" >
            </div>
            <div class="form-group">
            <input type="text" name="descripcion" value="{{post.descripcion}}">
            </div>
            <div class="form-group">
            <textarea name="texto">{{post.texto}}</textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Guardar</button>
            </div>
        </form>
    </div>
</div>
</div>