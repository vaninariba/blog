<div class="row">
    {{#each newpost}}
    <div class="col-md-10">
       <div class="card">
            <div class="card-title d-flex justify-content-between align-content-center">  
                 <h2 class="title">
                   {{titulo }}
                </h2>
                <a href="/posts/edit/{{_id}}"><i class="fas fa-edit"></i></a>
            </div>
            <div class="card-body">
              <h4>Autor:{{autor}}</h4>
              <h3>{{descripcion}}</h3>
              <h6>{{texto}}</h6>
              <form action="/posts/delete/{{_id}}?_method=DELETE" method="post">   
                <input type="hidden" name="_method" value="DELETE" > 
                <button class="btn btn-danger btn-block btn-md"type="submit">Eliminar</button>
              </form>

              <hr>
            </div>
       </div>
      </div>
    {{/each}}
</div>